<UserControl x:Class="TypeIT.Views.MyCollectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TypeIT.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="270"/>
                <ColumnDefinition Width="5"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="135"/>
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>

            <TextBlock Text="My Collection" 
                       TextAlignment="Left" VerticalAlignment="Bottom"
                       Foreground="{DynamicResource TextBlue}"
                       Grid.Column="1" Grid.Row="0"/>

            <Button Grid.Column="1" Grid.Row="0"
                    Style="{StaticResource HeaderButton}"
                    Command="{Binding NavigateHomeCommand}">
                <StackPanel>
                    <Image Source="../Resources/Images/homeIcon.png" />
                </StackPanel>
            </Button>

            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>


                <ListView x:Name="books" ItemsSource="{Binding Books}" 
                      Grid.Column="1" Grid.Row="1"
                      Grid.ColumnSpan="2"
                      Grid.RowSpan="2"
                      ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                      ScrollViewer.VerticalScrollBarVisibility="Hidden"
                      ScrollViewer.CanContentScroll="False"
                      Background="Transparent"
                      BorderThickness="0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Gold" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Gold" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <ItemContainerTemplate>
                            <WrapPanel>
                                <Border Style="{StaticResource LockedAchievementBorder}">
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding BookName}" 
                                                       VerticalAlignment="top"
                                                       FontSize="10" 
                                                       Height="15" 
                                                       Foreground="{StaticResource ResourceKey=TextHeaderColor}"
                                                       TextAlignment="Left"/>

                                        <StackPanel Orientation="Horizontal" Height="30">
                                            <StackPanel Orientation="Vertical" Margin="0,5,0,0">
                                                <TextBlock FontSize="6" 
                                                               Foreground="{StaticResource ResourceKey=TextBodyColor}"
                                                               TextAlignment="Left"
                                                               Text="{Binding Progress}"/>

                                                <TextBlock FontSize="6" 
                                                               Foreground="{StaticResource ResourceKey=TextBodyColor}"
                                                               TextAlignment="Left" 
                                                               Text="{Binding Page}"/>
                                            </StackPanel>

                                            <Button Margin="55,0,0,0" 
                                                        Style="{StaticResource HeaderButton}"
                                                        Height="30"
                                                        Width="20"
                                                        Command="{Binding DeleteBook}">
                                                <Image Source="../Resources/Images/deleteIcon.png" Height="25"/>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </WrapPanel>
                        </ItemContainerTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
    </Viewbox>
</UserControl>
