<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Colour codes for the dark theme -->
    <!-- Variable names must be consistent with LightTheme.xaml -->
    
    <!-- Main colours -->
    <Color x:Key="BackgroundColor">#141414</Color>
    <Color x:Key="ButtonColor">#212121</Color>
    <Color x:Key="ElementBlue">#326ba5</Color>
    <Color x:Key="Shadow">#000000</Color>
    <Color x:Key="TextHeader">#326ba5</Color>
    <Color x:Key="TextBody">#ffffff</Color>
    <Color x:Key="LockedAchievementColor">#212326</Color>

    <SolidColorBrush x:Key="Background" Color="{DynamicResource BackgroundColor}"/>
    <SolidColorBrush x:Key="TextBlue" Color="{DynamicResource ElementBlue}"/>
    <SolidColorBrush x:Key="Button" Color="{DynamicResource ButtonColor}"/>
    <SolidColorBrush x:Key="TextHeaderColor" Color="{DynamicResource TextHeader}"/>
    <SolidColorBrush x:Key="TextBodyColor" Color="{DynamicResource TextBody}"/>
    <SolidColorBrush x:Key="ShadowColor" Color="{DynamicResource Shadow}"/>
    <SolidColorBrush x:Key="LockedAchievement" Color="{DynamicResource LockedAchievementColor}"/>
</ResourceDictionary> 