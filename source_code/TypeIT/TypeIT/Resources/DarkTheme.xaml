<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Colour codes for the dark theme -->
    <!-- Variable names must be consistent with LightTheme.xaml -->
    
    <!-- Main colours -->
    <Color x:Key="BackgroundColor">#141414</Color>
    <Color x:Key="ButtonColor">#212121</Color>
    <Color x:Key="ElementBlue">#326ba5</Color>
    <Color x:Key="Shadow">#000000</Color>
    <Color x:Key="TextHeader">#326ba5</Color>
    <Color x:Key="TextBody">#ffffff</Color>
    <Color x:Key="LockedAchievementColor">#212326</Color>

    <SolidColorBrush x:Key="Background" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="TextBlue" Color="{StaticResource ElementBlue}"/>
    <SolidColorBrush x:Key="Button" Color="{StaticResource ButtonColor}"/>
    <SolidColorBrush x:Key="TextHeaderColor" Color="{StaticResource TextHeader}"/>
    <SolidColorBrush x:Key="TextBodyColor" Color="{StaticResource TextBody}"/>
    <SolidColorBrush x:Key="ShadowColor" Color="{StaticResource Shadow}"/>
    <SolidColorBrush x:Key="LockedAchievement" Color="{StaticResource LockedAchievementColor}"/>
</ResourceDictionary> 