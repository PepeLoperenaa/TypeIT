<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="Fonts/Fragmentcore.otf#Fragment Core" />
    </Style>

    <Style x:Key="BodyText" TargetType="{x:Type Run}">
        <Setter Property="FontSize" Value="5"/>
        <Setter Property="Foreground" Value="{StaticResource TextBodyColor}"/>
    </Style>

    <!-- Button with image-->
    <Style x:Key="ImageButton" TargetType="Button">
        <Setter Property="Height" Value="60"/>
        <Setter Property="Width" Value="60"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="8"/>
        <Setter Property="Foreground" Value="{StaticResource TextHeaderColor}"/>
        <Setter Property="Button.Effect">
            <Setter.Value>
                <DropShadowEffect Color="{StaticResource Shadow}"
                                      Direction="320" ShadowDepth="1" 
                                      BlurRadius="5" Opacity="0.6" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5" Background="{StaticResource Button}">
                        <ContentPresenter x:Name="contentPresenter" 
                                              ContentTemplate="{TemplateBinding ContentTemplate}" 
                                              Content="{TemplateBinding Content}" 
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              Margin="{TemplateBinding Padding}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Button in header -->
    <Style x:Key="HeaderButton" TargetType="Button">
        <Setter Property="Height" Value="15"/>
        <Setter Property="Width" Value="15"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="8"/>
        <Setter Property="Foreground" Value="Transparent"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="Transparent">
                        <ContentPresenter x:Name="contentPresenter" 
                                              ContentTemplate="{TemplateBinding ContentTemplate}" 
                                              Content="{TemplateBinding Content}" 
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              Margin="{TemplateBinding Padding}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Textblocks in AboutView-->
    <!-- Set the value of its border because the TextBlock itself is embedded in a border tag -->
    <Style x:Key="TextBlockBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Button}"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{StaticResource Shadow}"
                                      Direction="320" ShadowDepth="1" 
                                      BlurRadius="5" Opacity="0.6" />
            </Setter.Value>
        </Setter>
    </Style>

    

</ResourceDictionary>